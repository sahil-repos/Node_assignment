        <form action="/editband/{{band.id}}" method="post">
            <div class="form-group">
                <label for="bandname">Band name:</label>
                <input type="text" class="form-control" id="bandname" placeholder="Enter Bandname" name="bandname" value="{{band.bandname}}" required>
